page {
  background-color: #eee;
  overflow: hidden;
  height: 100%;
}
.address-list-title {
  width: 100%;
  height: 80rpx;
  background-color: #f3f3f3;
  color: #666;
  font-size: 32rpx;
  text-indent: 30rpx;
  line-height: 80rpx;
  display: none;
}
.myAddress-bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  line-height: 48px;
  z-index: 1;
  font-size: 15px;
  text-align: center;
  color: #666;
  background-color: #fff;
  box-shadow: 0 -1px 2px #eee;
}
.myAddress-bottom-nav text{
  vertical-align: middle;
  margin: 0 8rpx;
}
.myAddress-content-container {
  background-color: #fff;
  overflow-y: auto;
  overflow-x: hidden;
}
.myAddress-address {
  position: relative;
  padding: 15px 0;
  line-height: 20px;
  border-bottom:1px solid #f3f3f3;
}
.address-label {
  font-size: 22rpx;
  padding: 0 16rpx;
  margin-right: 10rpx;
  border-radius: 2px;
  vertical-align:middle;
}
.home {
  border: 1px solid #ff7100;
  color: #ff7100;
}
.company {
  border: 1px solid #3091f2;
  color: #3091f2;
}
.school {
  border: 1px solid #3091f2;
  color: #3091f2;
}
.myAddress-address view {
  position: relative;
}
.check-box-container {
  position: relative;
  padding: 10px;
  margin: 0 5px;
  z-index:1;
  float: left;
}
.myAddress-delete {
  position:absolute;
  right:0;
  top:0;
  padding: 15px 10px;
  color: #f53530;
}
.myAddress-address-top {
  padding: 0 30rpx;
}
.myAddress-address-top .address-detail {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  display:inline-block;
  width: 550rpx;
  vertical-align:top;
  line-height:44rpx;
}
.myAddress-address-top .address-person{
  font-size: 24rpx;
  color: #666;
  line-height: 50rpx;
  display: block;
}
.add-btn {
  display: inline-block;
  width: 13px;
  height: 13px;
  border-radius: 50%;
  border: 1px solid #f53530;
  position: relative;
  vertical-align:middle;
}
.add-btn:before, 
.add-btn:after{
  position: absolute;
  content: "";
  display: block;
  background-color: #ff7100;
}
.add-btn:before{
  width: 7px;
  height: 1px;
  left:3px;
  top:6px;
}
.add-btn:after {
  width: 1px;
  height: 7px;
  left: 6px;
  top: 3px;
} 
.check-box-container {
  position: relative;
  padding: 10px;
  margin: 0 5px;
  z-index:1;
  float: left;
}
.check-box {
  display: inline-block;
  width: 20px;
  height: 20px;
  padding: 4px 3px;
  margin-right: 6px;
  box-sizing: border-box;
  border-radius: 50%;
  vertical-align: middle;
  line-height: 13px;
  background-color: #eaeaea;
}
.check-box.checked {
  background-color: #f53530;
}
.check-box image {
  width: 100%;
  height: 100%;
}